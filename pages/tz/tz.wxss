/* pages/tz/tz.wxss */
/**index.wxss**/
.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #aaa;
  }
  
  .userinfo-avatar {
    overflow: hidden;
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
  }
  
  .usermotto {
    margin-top: 200px;
  }
  
  /* pages/xx/xx.wxss */
  page{
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  .navbar{
    flex: none;
    display: flex;
    background: #fff;
  }
  .navbar .item{
    position: relative;
    flex: auto;
    text-align: center;
    line-height: 80rpx;
  }
  .navbar .item.active{
    color: #FFCC00;
  }
  .navbar .item.active:after{
    content: "";
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 4rpx;
    background: #FFCC00;
  }
  .second3{
    width: 100%;
    background-color: rgb(255, 255, 255);
    color: rgb(107, 2, 133);
    height:130rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: left;
    border-bottom: 1rpx solid #efefef;
  }
  .tp3{
    width: 100rpx;
    height: 100rpx;
  }
  .tp4{
    width: 120rpx;
    height: 60rpx;
  }
  .cla{
    margin-top: 10rpx;
    display: flex;
    flex-wrap: wrap;
    border-left: 1rpx solid #efefef;
    border-top: 1rpx solid #efefef;
  }
  .btn2{
    display: flex;
    flex-direction: column;
    align-items: left;
    justify-content: left;
    font-size: 38rpx;
  }
  .btn3{
    color: gray;
    font-size: 24rpx;
  }
  .second4{
    width: 65%;
    display: flex;
    flex-direction: row-reverse;
  }
  
  .time{
    color: gray;
  }