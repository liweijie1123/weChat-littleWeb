</view>



<view class="cla" bindtouchstart="startEvent" bindtouchend="endEvent">
<view class="btn">
  <image src="/pages/image/2/job.svg" class="kq" bindtap="goto1"></image>
  <text>考勤</text>
</view>

<view class="btn"><image src="/pages/image/2/msg.svg" class="kq" bindtap="goto3"></image>
  <text>消息</text></view>
<view class="btn"><image src="/pages/image/3/map.svg" class="kq" bindtap="goto4"></image>
  <text>导航</text></view>
  
<view class="btn"><image src="/pages/image/2/feedback.svg" class="kq" bindtap="goto5"></image>
  <text>反馈</text></view>
<view class="btn"><image src="/pages/image/3/setting.svg" class="kq" bindtap="goto6"></image>
  <text>设置</text></view>
  <view class="btn"><image src="/pages/image/3/help.svg" class="kq" bindtap="goto2"></image>
  <text>帮助</text></view>
</view>

<view class="map">

  <map id="map" longitude="120.295556" latitude="30.420219" markers="{{markers}}" scale="14" show-location
  style="width: 100%; height: 100%;" bindregionchange="bindregionchange" bindtap="bindtapMap"></map>
</view>
